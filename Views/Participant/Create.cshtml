@model TeamSport.ViewModels.ParticipantEditViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using TeamSport.Models;
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Participant</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentParticipant.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CurrentParticipant.Name)
                @Html.ValidationMessageFor(model => model.CurrentParticipant.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentParticipant.BirthDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CurrentParticipant.BirthDate)
                @Html.ValidationMessageFor(model => model.CurrentParticipant.BirthDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentParticipant.Gender, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedGenderId, Model.Genders, "Choose ...")

                @Html.ValidationMessageFor(model => model.CurrentParticipant.Gender)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
